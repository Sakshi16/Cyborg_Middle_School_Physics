<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout
    android:id="@+id/activity_sound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.applications.sakshirambhia.myapplication.sound">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/sound"
        android:textColor="@color/orange"
        android:text="Frequency of sound"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/soundfreq"
        android:layout_below="@+id/sound"
        android:layout_marginTop="15dp"
        android:textColor="@color/magenta"
        android:text="Sound audible to humans is in the frequency range of 20Hz - 20kHz."/>

    <TextView
        android:id="@+id/experiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/soundfreq"
        android:layout_marginTop="15dp"
        android:textColor="@color/red"
        android:text="Let's Experiment"
        android:textSize="22dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/pt1"
        android:textColor="@color/black"
        android:layout_below="@id/experiment"
        android:layout_marginTop="15dp"
        android:text="Hear the three sounds of different frequencies given below. Then make an adult as well as an elderly person hear them. Note the frequencies audible for each."/>

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Audio 1"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:background="@color/lightorange"
        android:layout_below="@+id/pt1"
        android:layout_marginTop="18dp"
        android:id="@+id/audio1" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Audio 2"
        android:background="@color/lightorange"
        android:layout_below="@+id/audio1"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/audio2" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Audio 3"
        android:background="@color/lightorange"
        android:layout_below="@+id/audio2"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/audio3" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio3"
        android:layout_marginTop="15dp"
        android:textColor="@color/green"
        android:text="You notice that the sounds become decreasingly audible as the frequency increases and slowly transitions into ultrasonic sound. However, an elderly person may not be able to hear all three sounds."
        android:textSize="20dp"
        android:textStyle="italic"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button22"
        android:text="Next"
        android:background="@drawable/next"
        android:layout_below="@+id/result"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

</RelativeLayout>
    </ScrollView>
