<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sound"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.applications.sakshirambhia.myapplication.sound">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/newton"
        android:textColor="@color/orange"
        android:text="Application of Pascal's Law"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newton"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/magenta"
        android:text="Hydraulic press"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:id="@+id/press"
        android:src="@drawable/press"
        android:foregroundGravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/press"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        android:textColor="@color/magenta"
        android:text="Hydraulic brake"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:id="@+id/brake"
        android:src="@drawable/brake"
        android:foregroundGravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button1"
        android:text="Done"
        android:background="@drawable/next"
        android:layout_below="@+id/brake"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

</RelativeLayout>
