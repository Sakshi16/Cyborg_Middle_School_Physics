<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.applications.sakshirambhia.myapplication.sound">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/sound"
        android:textColor="@color/magenta"
        android:text="The loudness of sound depends on the area of the surface."/>

    <ImageView
        android:id="@+id/tubelight"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:layout_below="@id/sound"
        android:layout_marginTop="25dp"
        android:src="@drawable/tubelight" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Take a look at the drum kit below. The drum with a greater surface area will produce a louder sound."
        android:textColor="@color/black"
        android:layout_alignTop="@+id/tubelight"
        android:layout_toEndOf="@+id/tubelight"
        android:layout_marginStart="13dp"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tubelight"
        android:src="@drawable/drumkit"
        android:id="@+id/imageView4" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button"
        android:text="Next"
        android:background="@drawable/next"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />
</RelativeLayout>

