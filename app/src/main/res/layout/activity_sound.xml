<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout
    android:id="@+id/activity_sound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.applications.sakshirambhia.myapplication.sound">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/soundpropagation"
        android:textColor="@color/orange"
        android:text="Propagation of sound"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/soundpropagation"
        android:layout_marginTop="15dp"
        android:id="@+id/sound"
        android:textColor="@color/magenta"
        android:text="Sound is produced by vibrations that travel through the air or another medium and reach the person's ear."

        />

    <TextView
        android:id="@+id/experiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sound"
        android:layout_marginTop="15dp"
        android:textColor="@color/red"
        android:text="Let's Experiment"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/experiment"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="1. Tie a spoon to the middle of a string."/>

    <TextView
        android:id="@+id/pt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@id/pt1"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="2. Hold the two ends of the string and bang the spoon on the table. "/>

    <TextView
        android:id="@+id/pt2.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_below="@id/pt2"
        android:layout_marginTop="0dp"
        android:text="Sound travels through the air from the spoon to your ear. "/>


    <TextView
        android:id="@+id/pt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/pt2"
        android:layout_marginTop="15dp"
        android:text="3. Now wrap the string around your index finger such that the spoon remains in the centre of the string."/>

    <TextView
        android:id="@+id/pt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/pt3"
        android:layout_marginTop="15dp"
        android:text="4. Place your index fingers in your ears."/>

    <TextView
        android:id="@+id/pt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/pt4"
        android:layout_marginTop="15dp"
        android:text="5. Bring your head close to the table and bang the spoon on the table while keeping your fingers in your ears."/>

    <TextView
        android:id="@+id/pt5.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/green"
        android:layout_below="@id/pt5"
        android:layout_marginTop="85dp"
        android:textStyle="italic"
        android:text="How is the sound different than before? Is it longer/shorter or stronger/lighter? Why?"/>

    <ImageView
        android:id="@+id/think"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/think"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pt5"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button17"
        android:text="Next"
        android:background="@drawable/next"
        android:layout_below="@+id/pt5.1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/spoon"
        android:id="@+id/spoon"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pt2.3"/>


</RelativeLayout>
    </ScrollView>
