<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.applications.sakshirambhia.myapplication.MainActivity">

    <Button
        android:id="@+id/sound_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="1. Sound"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="viewStart"
        android:backgroundTint="@android:drawable/screen_background_light_transparent" />


    <Button
        android:id="@+id/light_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="2. Light"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="viewStart"
        android:backgroundTint="@android:drawable/screen_background_light_transparent"
        android:layout_below="@+id/sound_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/fluids_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/light_button"
        android:text="3. fluids"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="viewStart"
        android:backgroundTint="@android:drawable/screen_background_light_transparent" />

    <Button
        android:id="@+id/newton_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/fluids_button"
        android:text="4. newton's laws"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="viewStart"
        android:backgroundTint="@android:drawable/screen_background_light_transparent" />

    <Button
        android:id="@+id/electricity_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/newton_button"
        android:text="5. electricity"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="viewStart"
        android:backgroundTint="@android:drawable/screen_background_light_transparent" />

</RelativeLayout>
