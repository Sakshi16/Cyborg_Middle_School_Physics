<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout
    android:id="@+id/activity_sound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.applications.sakshirambhia.myapplication.sound">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/light"
        android:textColor="@color/orange"
        android:text="Refraction of Light"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/magenta"
        android:text="Due to difference in densities of different mediums, speed of light varies in each medium."/>

    <TextView
        android:id="@+id/experiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:text="Let's Experiment"/>

    <TextView
        android:id="@+id/pt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/experiment"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="1.Draw two different coloured bars on a paper and stick them to a wall."/>

    <TextView
        android:id="@+id/pt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pt1"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="2.Place a jar or glass about 6 inches in front of the colored bars or arrows. Pour water in it."/>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:id="@+id/bar"
        android:src="@drawable/bar"
        android:layout_marginTop="15dp"
        android:layout_below="@id/pt2"/>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="190dp"
        android:id="@+id/bar1"
        android:src="@drawable/bar1"
        android:layout_toRightOf="@id/bar"
        android:layout_marginTop="15dp"
        android:layout_below="@id/pt2"/>

    <TextView
        android:id="@+id/pt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/green"
        android:text="What really happens?"/>

    <TextView
        android:id="@+id/pt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pt3"
        android:textSize="20dp"
        android:textColor="@color/green"
        android:textStyle="italic"
        android:text="The colours of the bars get switched due to rafraction of light."/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/button10"
        android:text="Next"
        android:background="@drawable/next"
        android:layout_below="@+id/pt4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    </RelativeLayout>
    </ScrollView>




